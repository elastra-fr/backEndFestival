{% extends 'home/index.html.twig' %}

{% block title %}Ajout | Style de musique{% endblock %}

{% block content %}
    {{ form_start(form, {'attr' : {'class' : 'formBase flexCont'}}) }}
    <div class="formContainerBase flexCont">
        <h3>Ajout d'un style de musique</h3>
        <div class="formGroup flexCont">
            {{ form_label(form.music_style_name, 'Nouveau Style') }}
            {{ form_widget(form.music_style_name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.music_style_name) }}
        </div>
        <button type="submit" class="button">Enregistrer</button>

        <a href="{{ path('app_admin_style') }}" class="button">Annuler</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
