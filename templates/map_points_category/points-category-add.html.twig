{% extends 'home/index.html.twig' %}

{% block title %}Ajout | Catégorie marqueur{% endblock %}

{% block content %}
    {{ form_start(form, {'attr' : {'class' : 'formBase flexCont'}}) }}
    <div class="formContainerBase flexCont">
    <h3>Ajout d'une catégorie de marqueur</h3>
    <div class="formGroup flexCont">
        {{ form_label(form.mapPointCategory, 'Nouveau Style') }}
        {{ form_widget(form.mapPointCategory, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.mapPointCategory) }}
    </div>

        <div class="formGroup flexCont">
        {{ form_label(form.file, 'Icone') }}
        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.file) }}
    </div>

    <button type="submit" class="button">Enregistrer</button>

    <a href="{{ path('app_admin_map_points_category') }}" class="button">Annuler</a>
    {{ form_end(form) }}

    </div>
{% endblock %}
