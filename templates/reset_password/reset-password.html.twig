{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mt-5 mb-4 text-center">Réinitialisation du mot de passe</h1>
                
                {# Affichage des messages flash d'erreur #}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                            {# Affichage des messages flash de succès #}
                            {% set success_flash = app.flashes('success') %}
                            {% for message in success_flash %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                                <div class="text-center mt-3">
                                    <a href="#" class="btn btn-link">Cliquez ici pour vous connecter</a>
                                </div>
                            {% endfor %}

                {# Afficher le formulaire uniquement s'il n'y a pas de message flash de succès #}
                {% if success_flash is empty %}
                    {{ form_start(form, {'attr': {'class': 'formBase'}}) }}
                        <div class="formGroup">
                            {{ form_widget(form.newPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            {# Affichage des erreurs de validation #}
                            {% if form_errors(form.newPassword) %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.newPassword) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="formGroup">
                            {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le nouveau mot de passe'}}) }}
                            {# Affichage des erreurs de validation #}
                            {% if form_errors(form.confirmPassword) %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.confirmPassword) }}
                                </div>
                            {% endif %}
                        </div>

                        <button type="submit" class="button">Réinitialiser le mot de passe</button>
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
