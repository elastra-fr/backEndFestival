{% extends 'home/index.html.twig' %}

{% block title %}Ajout | Groupe{% endblock %}

{% block content %}
 

    {{ form_start(form, {'attr':{'class':'formBase'} }) }}

    <div class="formContainerBase">
    <h3>Ajout d'un groupe</h3>

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.file) }}
        {{ form_widget(form.file, {'attr': {'class': 'form-control-file'}}) }}
        {{ form_errors(form.file) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.music_style) }}
        {{ form_widget(form.music_style, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.music_style) }}
    </div>
    
    {# Notez que url_image est de type HiddenType, donc nous n'affichons pas de label ou de widget ici #}
    {{ form_widget(form.url_image) }}

    <button type="submit" class="button">Enregistrer</button>

    </div>

    {{ form_end(form) }}
{% endblock %}
