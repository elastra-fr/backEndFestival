{# templates/partner_category/form.html.twig #}

{% extends 'home/index.html.twig' %}

{% block title %}Ajout | Catégorie partenaire{% endblock %}

{% block content %}
    <div class="formBase">
        {{ form_start(form, {'attr': {'class': 'formBase flexCont'}}) }}

        <div class="formContainerBase flexCont">
            <h3>Créer une catégorie</h3>

            <div class="formGroup flexCont">
                {{ form_label(form.category, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.category) }}
            </div>

            <button type="submit" class="button">Enregistrer</button>
            <a href="{{ path('app_admin_partner_category') }}" class="button">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
