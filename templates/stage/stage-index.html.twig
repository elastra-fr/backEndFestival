{% extends 'home/index.html.twig' %}

{% block title %}Scènes{% endblock %}

{% block content %}
<div class="contentContainer">

{% include 'flashband.html.twig'%}


<h2>Gestion des Scènes</h2>
    <a href="{{ path('app_admin_stage_new') }}" class="button">Créer scène</a>

<h3>Liste des Scènes</h3>

 
   <ul class="listBase flexCont">
        {% for stage in stages %}
            
            
            <li class="listBaseItem">
                <div class="listItemTitle">
                    <img src="{{ asset('images/icons/music-solid.svg') }}" alt="Icon" class="listItemIcon" />
                    <span>{{ stage.stageName }} </span>
                </div>
                <div class="listItemAction">
                    <a href="{{ path('app_admin_stage_edit', {'id': stage.stageId}) }}" class="button">Editer</a>
                    <a href="{{ path('app_admin_stage_delete', {'id': stage.stageId}) }}" class="button needs-confirmation">Effacer</a>
                </div>
            </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}