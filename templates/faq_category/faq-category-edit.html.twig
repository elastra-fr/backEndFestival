{% extends 'home/index.html.twig' %}

{% block title %}Edition | Section FAQ{% endblock %}

{% block content %}
    {{ form_start(form, {'attr' : {'class' : 'formBase flexCont'}}) }}
    <div class="formContainerBase flexCont">
    <h3>Editer une Section</h3>
    <div class="formGroup flexCont">
        {{ form_label(form.faqCategory, 'Section') }}
        {{ form_widget(form.faqCategory, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.faqCategory) }}
