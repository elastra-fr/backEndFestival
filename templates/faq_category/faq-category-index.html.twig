{% extends 'home/index.html.twig' %}

{% block title %}Sections | Informations - FAQ{% endblock %}

{% block content %}
<div class="contentContainer">
<h2>Gestion des sections Informations et FAQ</h2>
    <a href="{{ path('app_admin_faq_category_new') }}" class="button">Cr√©er section</a>

<h3>Liste des Sections</h3>

 
   <ul class="listBase flexCont">
        {% for category in categories %}
            
            <li class="listBaseItem">
                
                <div class="listItemTitle">
                    <img src="{{ asset('images/icons/info-solid.svg') }}" alt="Icon" class="listItemIcon" />
                    <span>{{ category.faqCategoryName }} </span>
                </div>
                
                <div class="listItemAction">
                    <a href="{{ path('app_admin_faq_category_edit', {'id': category.faqCategoryId}) }}" class="button">Editer</a>
                    <a href="{{ path('app_admin_faq_category_delete', {'id': category.faqCategoryId}) }}" class="button needs-confirmation">Effacer</a>
                </div>
            </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}
