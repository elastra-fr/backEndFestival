{% extends 'home/index.html.twig' %}

{% block title %}Edition | Partenaire{% endblock %}

{% block content %}
    

    {{ form_start(form, {'attr':{'class':'formBase'} }) }}

    <div class="formContainerBase">
    <h3>Modifier partenaire</h3>

    <div class="formGroup">
    {{ form_label(form.name, 'Nom*') }}
        {{ form_widget(form.name) }}
    </div>

    <div class="formGroup">
    {{ form_label(form.url_logo, 'Logo') }}
 {{ form_widget(form.file, {'attr': { 'class': 'form-control-file'}}) }}
    </div>

       <div id="imagePreview">
       
       
        {% if urlLogo %}
            <img src="{{ asset(urlLogo) }}" alt="Image" class="imagePreview" />
                <button type="button" onclick="removeImage()">Supprimer</button>
        {% endif %}
       
       </div>

    <div class="formGroup">
    {{ form_label(form.description, 'Description') }}
{{ form_widget(form.description) }}
    </div>

    <div class="formGroup">
    {{ form_label(form.category, 'Cat√©gorie*') }} 
    {{ form_widget(form.category) }}
    </div>
        
    <button type="submit" class="button">Enregistrer Modifications</button>
    <a href="{{ path('app_admin_partner') }}" class="button">Annuler</a>

    </div>

    {{ form_end(form) }}
{% endblock %}
