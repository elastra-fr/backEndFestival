{% extends 'home/index.html.twig' %}

{% block title %}Ajout | Catégorie Actualité {% endblock %}

{% block content %}
    <div class="formBase flexCont">
        {{ form_start(form, {'attr': {'class': 'formBase'}}) }}

        <div class="formContainerBase">
            <h3>Créer une catégorie</h3>

            <div class="formGroup flexCont">
                {{ form_label(form.news_category_name, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.news_category_name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.news_category_name) }}
            </div>

            <button type="submit" class="button">Enregistrer</button>
            <a href="{{ path('app_admin_news_category') }}" class="button">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}